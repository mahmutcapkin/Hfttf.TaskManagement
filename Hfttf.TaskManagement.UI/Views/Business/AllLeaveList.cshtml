@model List<LeaveResponse>
@{
    ViewData["Title"] = "AllLeaveList";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>İzinler</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">İzinler</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Simple Datatable start -->
        <div class="card-box mb-30">
            <div class="pd-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-blue h4">İzinler</h4>
                    </div>
                    <div class="col-md-6">
                        <a href="/Business/InsertLeave" class="btn btn-light"><i class="fa fa-plus"></i>Ekle</a>
                    </div>
                </div>

            </div>

            <div class="pb-20">
                <table class="data-table table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th class="table-plus datatable-nosort">Ad Soyad</th>
                            <th>Açıklama</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Gün Sayısı</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan</th>
                            <th class="datatable-nosort">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leave in Model)
                        {
                            <tr>
                                <td class="table-plus">@(leave.ApplicationUser.FirstName+" "+leave.ApplicationUser.LastName)</td>
                                <td>@leave.Title</td>
                                <td>@leave.StartDate.ToString("dd MMMM yyyy")</td>
                                <td>@leave.EndDate.ToString("dd MMMM yyyy")</td>
                                <td>@leave.NumberOfDay</td>
                                <td>@leave.CreatedDate.Value.ToString("dd MMMM yyyy")</td>
                                <td>@leave.CreateBy</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <a class="dropdown-item" href="/Business/LeavesForUser/@leave.ApplicationUserId"><i class="dw dw-eye"></i>Personel İzin Görüntüle</a>
                                            <a class="dropdown-item" href="/Business/EditLeave/@leave.Id"><i class="dw dw-edit2"></i>Güncelle</a>
                                            @*<a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Güncelle</a>*@
                                            @*<a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Sil</a>*@
                                            <form method="post" asp-action="DeleteLeave" asp-route-id="@leave.Id">
                                                <input type="hidden" asp-for="@leave.Id" />
                                                <input type="submit" value="Sil" class="dropdown-item" />
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
        <!-- Simple Datatable End -->


    </div>
</div>
