@model List<UserAssignmentResponse>


<table class="data-table table stripe hover nowrap">
    <thead>
        <tr>
            <th class="table-plus datatable-nosort">Görev Başlık</th>
            <th>Görev Önceliği</th>
            <th>Görev Durumu</th>
            <th>Bitiş Tarihi</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th class="datatable-nosort">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userAssignment in Model)
        {
            <tr>
                <td class="table-plus">@userAssignment.Task.Title</td>
                <td>@userAssignment.Task.Priority.ToString()</td>
                <td>@userAssignment.Task.TaskStatus.Status.ToString() </td>
                <td>@userAssignment.Task.DueDate.ToString("dd MMMM yyyy")</td>
                <td>@(userAssignment.ApplicationUser.FirstName+" "+ userAssignment.ApplicationUser.LastName)</td>
                <td>@userAssignment.ApplicationUser.Email</td>
                <td>@userAssignment.ApplicationUser.PhoneNumber</td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            <i class="dw dw-more"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                            <a onclick="showInPopupAssignment('@Url.Action("EditUserAssignment","UserTask",new {id=userAssignment.Id},Context.Request.Scheme)','Atama Güncelle')" class="dropdown-item"><i class="fa fa-pencil"></i>Düzenle</a>
                            <a class="dropdown-item" href="/UserTask/DeleteUserAssignment/@userAssignment.Id" onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?');">
                                <i class="dw dw-delete-3"></i>
                                Sil
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




