@model EducationInformationUpdate

@{ Layout = "_LayoutEducation"; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEditEducation" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostEducation(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <div class="form-group row">
                <label asp-for="SchoolName" class="col-sm-12 col-md-2 col-form-label"></label>
                <div class="col-sm-12 col-md-10">
                    <input asp-for="SchoolName" class="form-control">
                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Section" class="col-sm-12 col-md-2 col-form-label"></label>
                <div class="col-sm-12 col-md-10">
                    <input asp-for="Section" class="form-control">
                    <span asp-validation-for="Section" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate" class="col-sm-12 col-md-2 col-form-label"></label>
                <div class="col-sm-12 col-md-10">
                    <div class="form-group">
                        <input asp-for="StartDate" class="form-control month-picker" placeholder="Tarih Seçin" type="text">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate" class="col-sm-12 col-md-2 col-form-label"></label>
                <div class="col-sm-12 col-md-10">
                    <div class="form-group">
                        <input asp-for="EndDate" class="form-control month-picker" placeholder="Tarih Seçin" type="text">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



