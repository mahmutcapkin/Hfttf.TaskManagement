@model ProjectAdd 
@{
    ViewData["Title"] = "InsertProject";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Projeler</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Projeler</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="card-box mb-30">
            <div class="row">
                <div class="col-md-12">
                    <form method="post" asp-action="InsertProject">

                        <div class="form-group row">
                            <label asp-for="Title" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="html-editor pd-20 card-box mb-30">
                                <textarea asp-for="Description" class="textarea_editor form-control border-radius-0" placeholder="Açıklama.."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="StartDate" class="col-sm-12 col-md-2 col-form-label"></label>
                                    <div class="col-sm-12 col-md-10">
                                        <div class="form-group">
                                            <input asp-for="StartDate" class="form-control date-picker" placeholder="Tarih Seçin" type="text">
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="EndDate" class="col-sm-12 col-md-2 col-form-label"></label>
                                    <div class="col-sm-12 col-md-10">
                                        <div class="form-group">
                                            <input asp-for="EndDate" class="form-control date-picker" placeholder="Tarih Seçin" type="text">
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Priority" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<PriorityLevel>()">
                                    <option selected="selected" value="">Öncelik Durumu seçiniz</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        @*<div class="form-group row">
                            <label asp-for="LeaderId" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="LeaderId" class="form-control"
                                        asp-items="@(new SelectList(ViewBag.Leaders,"UserId","FullName"))">
                                    <option selected="selected" value="">Lider seçiniz</option>
                                </select>
                                <span asp-validation-for="LeaderId" class="text-danger"></span>
                            </div>
                        </div>*@

                        <div class="form-group">
                            <div class="col-md-6 offset-md-3">
                                <input type="submit" value="Kaydet" class="btn btn-primary btn-block" id="submitButton" />
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

