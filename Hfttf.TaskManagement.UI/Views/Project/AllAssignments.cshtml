@model List<UserAssignmentResponse>
@{
    ViewData["Title"] = "AllAssignments";
}


<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Atamalar</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Atamalar</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="card-box mb-30">

            <div class="pd-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-blue h4">Atamalar</h4>
                    </div>
                </div>
            </div>

            <div class="pb-20">
                <table class="data-table table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th class="table-plus datatable-nosort">Ad Soyad</th>
                            <th>Görev Başlık</th>
                            <th>Görev Önceliği</th>
                            <th>Teslim Tarihi</th>
                            <th>Atayan</th>
                            <th>Atama Tarihi</th>
                            <th class="datatable-nosort">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var assignment in Model)
                        {
                            <tr>
                                <td class="table-plus">@(assignment.ApplicationUser.FirstName+" "+assignment.ApplicationUser.LastName)</td>
                                <td>@assignment.Task.Title</td>
                                <td>@assignment.Task.Priority</td>
                                <td>@assignment.Task.DueDate.ToString("dd MMMM yyyy")</td>
                                <td>@assignment.CreateBy</td>
                                <td>@assignment.CreatedDate.Value.ToString("dd MMMM yyyy")</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <form method="post" asp-action="DeleteAssignment" asp-route-id="@assignment.Id">
                                                <input type="hidden" asp-for="@assignment.Id" />
                                                <input type="submit" value="Sil" class="dropdown-item" />
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>



