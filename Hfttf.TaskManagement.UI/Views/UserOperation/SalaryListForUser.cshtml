@model List<UserSalaryResponse>
@{
    ViewData["Title"] = "SalaryListForUser";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Maaşlarım</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Maaşlarım</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Simple Datatable start -->
        <div class="card-box mb-30">
            <div class="pd-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-blue h4">Maaş Bilgilerim</h4>
                    </div>
                </div>
            </div>

            <div class="pb-20">
                <table class="data-table table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th>Oluşturan</th>
                            <th>Maaş</th>
                            <th>Oluşturma Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salary in Model)
                        {
                            <tr>
                                <td>@(salary.CreateBy)</td>
                                <td>@salary.Salary</td>
                                <td>@salary.CreatedDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <!-- Simple Datatable End -->

    </div>
</div>
