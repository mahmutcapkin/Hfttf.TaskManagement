@model LeaveUpdate
@{
    ViewData["Title"] = "LeaveEditForUser";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>İzinlerim</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">İzinlerim</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="card-box mb-30">
            <div class="row">
                <div class="col-md-12">
                    <form method="post" asp-action="LeaveEditForUser" asp-route-id="@Model.Id">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ApplicationUserId" />
                        <div class="form-group row">
                            <label asp-for="Title" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Title" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="StartDate" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <div class="form-group">
                                    <input asp-for="StartDate" class="form-control date-picker" placeholder="Tarih Seçin" type="text">
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EndDate" class="col-sm-12 col-md-2 col-form-label"></label>
                            <div class="col-sm-12 col-md-10">
                                <div class="form-group">
                                    <input asp-for="EndDate" class="form-control date-picker" placeholder="Tarih Seçin" type="text">
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 offset-md-3">
                                <input type="submit" value="Kaydet" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

